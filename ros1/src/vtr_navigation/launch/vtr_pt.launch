<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="robot_type" default="grizzly"/>
  <arg name="monitor_scenario" default="default"/>
  <arg name="use_playback_safety_monitor" value="false"/> <!-- This is for offline data processing only! Do not enable on a real robot.-->

  <!-- Configs for path tracker -->
  <param name="path_tracker/root_config_file_folder" type="string" value="$(find vtr_path_tracker)/gains/asrl_grizzly"/>
  <rosparam command="load" ns="path_tracker" file = "$(find vtr_path_tracker)/params/path_tracker_$(arg robot_type).yaml"/>

  <!-- Set up safety monitor -->
  <node name="playback_safety_monitor" pkg="asrl__safety_monitor" type="playback_safety_monitor.py" if="$(arg use_playback_safety_monitor)"/>
  <param name="/path_tracker/playback" type="bool" value="$(arg use_playback_safety_monitor)"/>

  <include file="$(find asrl__safety_monitor)/launch/$(arg robot_type)_safety_monitor.xml" unless="$(arg use_playback_safety_monitor)">
    <arg name="scenario" value="$(arg monitor_scenario)"/>
  </include>

</launch>
